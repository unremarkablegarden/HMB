block nav
	header.bar.bar-nav
		a(href="/programm").icon.icon-left-nav.pull-left
		+home-button()
		+popover-title('Akteur') 
		//- data.akteur.name
				
block content
	.content.akteur
		div.table-view.card
			div.table-veiw-cell.table-view-divider
				h5= data.akteur.name
			div.table-view-cell
				if data.akteur.image.exists
					img(src=data.akteur._.image.thumbnail(340,340,{ gravity: "face" })).portrait
				!= data.akteur.bio

