mixin lock()
  .locked
    .inner
      .container
        .lock
          .unlocker
        .label Passwort
        input(type="password", name="password", value="", maxlength="4")

mixin home-button()
  //- div.btn.pull-right.home-button
  //-   img(src="/images/logo_gfx_only.svg")
  a(href=locals.event  data-transition="fade").btn.pull-right.home-button
