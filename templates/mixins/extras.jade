mixin back-button(path)
  a(href="#" data-transition="fade").icon.icon-left-nav.pull-left.backButton
  //- a(href="#{path}" data-transition="fade").icon.icon-left-nav.pull-left

mixin pop-over()
  div#popover.popover
    ul.table-view
      each link in navLinks
        li.table-view-cell
          a(href=link.href, data-transition="fade")= link.label
  div#popover2.popover
    ul.table-view
      li.table-view-cell
        a(href='/symposium-arbeiten-40/', data-ignore="push") Symposium Arbeiten 4.0
      li.table-view-cell
        a(href='/kaminabend-2016/', data-ignore="push") Kaminabend 2016
      li.table-view-cell
        a(href='/hauptversammlung-2016/', data-ignore="push") Hauptversammlung 2016

      //- li.table-view-cell
      //-   a(href='#', data-ignore="push", onclick="javascript:window.location.port=81") Hauptversammlung 2016


mixin popover-title(title)
    h1.title
      a(href="#popover")
        span
          div.Hspacer
          = title + " "
          span.icon.icon-caret

mixin welcomeIcon(title, icon)
  .welcome
    span(class=icon).icon
    //- h1.header= title

mixin welcomeImage(title, image)
  .welcome
    img(src=image)
    //- h1.header= title  

mixin favicon()
  link(rel="apple-touch-icon", sizes="180x180", href="/favicons/apple-touch-icon-s.png")
  link(rel="icon", type="image/png", href="/favicons/favicon-32x32.png", sizes="32x32")
  link(rel="icon", type="image/png", href="/favicons/favicon-16x16.png", sizes="16x16")
  link(rel="manifest", href="/favicons/manifest-s.json")
  link(rel="mask-icon", href="/favicons/safari-pinned-tab.svg", color="#888888")
  link(rel="shortcut icon", href="/favicons/favicon.ico")
  meta(name="msapplication-config", content="/favicons-s/browserconfig.xml")
  meta(name="theme-color", content="#ffffff")
