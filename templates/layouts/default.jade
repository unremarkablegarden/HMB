include ../mixins/flash-messages
include ../mixins/extras

doctype html
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1, maximum-scale=1, user-scalable=no')
		meta(name='apple-mobile-web-app-title', content='HB-Events')
		meta(name='apple-mobile-web-app-capable', content='yes')
		meta(name='apple-mobile-web-app-status-bar-style', content='black')
		meta(name='mobile-web-app-capable', content='yes')
		
		meta(name='robots', content='noindex')
		meta(name='googlebot', content='noindex')

		title= title || 'Hartmannbund Events'
		
		+favicon()
		
		link(href="/styles/site.css", rel="stylesheet")
		if user && user.canAccessKeystone
			link(href="/keystone/styles/content/editor.min.css", rel="stylesheet")
		block css
		block head

	//- HTML BODY
	body
		+pop-over()
		block nav					
		block intro
		+flash-messages(messages)
		block content
		block footer
		//- div.loader		

		+lock()

		//- --------------------------------------------------------------
		//- JAVASCRIPT
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/ratchet/2.0.2/js/ratchet.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/js-cookie/2.1.3/js.cookie.min.js')
		- var scriptPath = locals.event+'js/script.min.js'
		script(src=scriptPath)


		if user && user.canAccessKeystone
			script(src='/keystone/js/content/editor.js')

		block js
